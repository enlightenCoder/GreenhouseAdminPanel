<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Transparent80"
    tools:context=".SearchGreenhouse">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Enter Greenhouse name : "/>

        <EditText
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/white"
            android:id="@+id/greenhouseName"
            />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="Phone : "
            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:id="@+id/greenhousephone"
            />


        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="Address : "
            />
        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:id="@+id/greenhouseaddress"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Search"
            android:layout_marginTop="20dp"
            android:id="@+id/searchBtn"
            android:onClick="searchGreenhouse"/>
    </LinearLayout>





</RelativeLayout>